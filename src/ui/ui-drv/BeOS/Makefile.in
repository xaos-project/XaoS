CC     = @CC@
CXX    = @CXX@
CXXFLAGS = @CXXFLAGS@ #@CFLAGS@ -Wno-multichar -Wno-ctor-dtor-privacy
LIBS   = @LIBS@ -lm
LFLAGS = @LDFLAGS@
AR     = @AR@
RANLIB = @RANLIB@


.SUFFIXES: .cpp
%.o: %.cpp
	$(COMPILE.cc) $< $(OUTPUT_OPTION)

SRCS = XaoSApplication.cpp \
       XaoSSplashView.cpp \
       XaoSSplashWindow.cpp \
       be_error.cpp \
       be_checkfile.cpp \
       be_possitionio.cpp \
       XaoSTranslator.cpp \
       XaoSDirectScreen.cpp \
       XaoSScreenView.cpp \
       XaoSDialog.cpp \
       XaoSMenu.cpp \
       XaoSView.cpp \
       XaoSDirectView.cpp \
       XaoSWindow.cpp \
       XaoSDirectWindow.cpp 
       #XaoSProducer.cpp \
       #XaoSMediaAddOn.cpp \

OBJS = $(SRCS:.cpp=.o)

TLIB = ../../../lib/libuibe.a


all:	$(TLIB) be_main.o XaoS.rsrc  ui_be.o

$(TLIB):$(OBJS)
	rm -f $@
	$(AR) rc $@ $^
	$(RANLIB) $@ 

XaoS.rsrc: XaoS.r XaoSResources SplashScreen
	mwbres -o $@ XaoS.r

clean:
	rm -f $(TLIB)
	rm -f *.[oas]
	rm -f *~
	rm -f core 
	rm -f XaoS.rsrc

distclean:	clean
